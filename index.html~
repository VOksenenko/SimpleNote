    <script>
    
var notes =[];
for(note in notes){
var li = document.createElement('li');
p.innerHTML = notes[note];
var ul = document.getElementsById('myNotes');
ul.appendChild(li); 
}//конец цикла for

var save = function() {
    var text=document.getElementById('text').value;
    notes.push(text);
    var li = document.createElement('li');
    li.setAttribute("margin-left","0px");
    li.classList.add("ui-corner-all", "ui-shadow");
    li.innerHTML = notes[notes.length - 1];
    var ul = document.getElementById('myNotes');
    ul.appendChild(li); 
}

</script>
